<?xml version="1.0" encoding="UTF-8"?>
<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         bootstrap="bootstrap/autoload.php"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false"
         syntaxCheck="false"
>
    <testsuites>
        <testsuite name="full">
            <directory>./app/tests/</directory>
        </testsuite>
        <testsuite name="home">
            <directory>./app/tests/HomeController</directory>
        </testsuite>
        <testsuite name="v1">
            <directory>./app/tests/v1</directory>
        </testsuite>
        <testsuite name="v1_user">
            <directory>./app/tests/v1/UserController</directory>
        </testsuite>
        <testsuite name="v1_studentlearning">
            <directory>./app/tests/v1/StudentLearningController</directory>
        </testsuite>
    </testsuites>
</phpunit>
